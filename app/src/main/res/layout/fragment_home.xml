<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/android_com"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242A32"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/my_moive_lo"
            style="@style/my_movie_lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="56dp"
            android:text="@string/my_moive_lo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/my_moive_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:elevation="1dp"
            android:text="@string/my_movie_search"
            app:layout_constraintStart_toStartOf="@+id/rectangle_1"
            app:layout_constraintTop_toTopOf="@+id/rectangle_1" />


        <View
            android:id="@+id/rectangle_1"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="244dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/home_moive_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_add_box_24"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/mylog_recyclerview"
            android:layout_width="413dp"
            android:layout_height="134dp"
            android:layout_marginTop="132dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scrollbars="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
